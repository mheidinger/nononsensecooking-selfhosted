{
  "compilerOptions": {
    "allowJs": true,
    /* Path Aliases */
    "baseUrl": ".",
    "checkJs": true,

    /* Base Options: */
    "esModuleInterop": true,
    "incremental": true,

    "isolatedModules": true,

    "jsx": "preserve",
    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "~/*": ["./src/*"],
      "~components/*": ["./src/app/_components/*"]
    },
    "plugins": [
      { "name": "next" },
      { "name": "typescript-plugin-css-modules" }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    /* Strictness */
    "strict": true,
    "target": "es2022"
  },
  "exclude": ["node_modules"],
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ]
}
